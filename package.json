{
  "name": "electron_class_schedule",
  "version": "1.3.0",
  "description": "电子课表",
  "main": "main.js",
  "author": "Enigfrank",
  "license": "MIT",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build": "electron-builder --win --x64 --publish never",
    "rebuild": "electron-rebuild"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.2",
    "@electron/rebuild": "^4.0.1",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.19",
    "electron-updater": "^6.6.7",
    "node-gyp": "^11.4.1"
  },
  "dependencies": {
    "electron-disable-minimize": "^2.1.0",
    "electron-log": "^5.4.3",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.1.0",
    "windows-shortcuts": "^0.1.6"
  },
  "build": {
  "asar": true,
  "asarUnpack": ["js/scheduleConfig.js","logs/**/*"],
  "appId": "com.enigfrank.electronclassschedule", 
  "productName": "电子课表",
  "copyright": "Copyright © 2025 Enigfrank",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "./image/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
    "files": [
      "css/**/*",
      "font/**/*",
      "image/**/*",
      "js/**/*",
      "l1/**/*",
      "logs",
      "node_modules/**/*",
      "html/**/*",
      "index.html",
      "main.js"
    ],
  "directories": {  
    "output": "out"
  }
}
}
