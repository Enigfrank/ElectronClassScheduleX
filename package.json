{
  "name": "electron_class_schedule",
  "version": "1.3.3",
  "description": "电子课表",
  "main": "main.js",
  "author": "Enigfrank",
  "license": "MIT",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "build": "electron-builder --win --x64 --publish never",
    "rebuild": "electron-rebuild"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.4",
    "@electron/rebuild": "^4.0.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.7",
    "node-gyp": "^11.4.1"
  },
  "dependencies": {
    "electron-disable-minimize": "^2.1.0",
    "electron-log": "^5.4.3",
    "electron-prompt": "^1.7.0",
    "electron-store": "^8.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "windows-shortcuts": "^0.1.6"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "js/scheduleConfig.js",
      "logs/example.log"
    ],
    "appId": "com.enigfrank.electronclassschedule",
    "productName": "电子课表",
    "copyright": "Copyright © Enigfrank",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./image/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "css/**/*",
      "dist/**/*",
      "modules/**/*",
      "font/**/*",
      "image/**/*",
      "js/**/*",
      "l1/**/*",
      "logs/**/*",
      "node_modules/**/*",
      "index.html",
      "shutdownManager.html",
      "GUI.html",
      "GUI-react.html",
      "loading.html",
      "shutdown-warning.html",
      "amtls.html",
      "main.js"
    ],
    "directories": {
      "output": "out"
    }
  }
}
